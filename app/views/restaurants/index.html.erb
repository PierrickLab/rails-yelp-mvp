<h1>All Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <strong><%= link_to restaurant.name, restaurant_path(restaurant) %></strong><br>
      <%= restaurant.address %><br>
      Category: <%= restaurant.category.capitalize %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary mt-3" %>
